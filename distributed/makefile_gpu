###############################################################################
INCLUDE_DIR += include ../common/include ../gpu/include
LIBRARY_DIR +=
LDFLAGS += $(addprefix -L,$(LIBRARY_DIR))

BUILD=./build/
BINDIR=./bin/
SRCDIR=./src/
SRCDIR2=../common/src/
HDRS=./include/

LIB=-ldl -lpthread -lm -lgmp -lgmpxx -lstdc++ -L../bounds/lib/ -lbounds -L/usr/local/cuda/lib64 -lcuda -lcudart -I/usr/local/cuda/include -L../heuristic -lig

OPT = -Wall -pedantic -Wno-unused-result -O3 -DUSE_GPU

CXX=mpicxx

CPPFLAGS = -std=c++11
CPPFLAGS += $(addprefix -I,$(INCLUDE_DIR))

OPT += $(LDFLAGS) $(LIB) $(CPPFLAGS)

FILES=main master worker worker_gpu communicator works work interval fact_work weights
FFILES=arguments pbab solution subproblem ttime

OOBJS=$(addprefix $(BUILD), $(addsuffix .o, $(FFILES))) $(addprefix $(BUILD), $(addsuffix .o, $(FILES))) ../multicore/build/matrix_controller.o ../multicore/build/sequentialbb.o ../multicore/build/bbthread.o ../multicore/build/ivm.o ../multicore/build/ivm_bound.o ../gpu/build/gpubb.o ../beamSearch/build/treeheuristic.o ../beamSearch/build/tree.o

#../multicoreLL/build/treeheuristic.o ../multicoreLL/build/tree.o

bb_gpu: $(OOBJS)
	$(CXX) $(OOBJS) -o $@ $(OPT)

$(BUILD)main.o:	$(SRCDIR)main.cpp
	@mkdir -p $(BUILD)
	$(CXX) -o $@ -c $< $(OPT)

$(BUILD)%.o: $(SRCDIR)%.cpp $(HDRS)%.h
	@mkdir -p $(BUILD)
	$(CXX) $(CFLAGS) -c $< -o $@ $(OPT)

$(BUILD)%.o: $(SRCDIR2)%.cpp
	@mkdir -p $(BUILD)
	$(CXX) $(CFLAGS) -c $< -o $@ $(OPT)

clean:
	rm -r $(BUILD)
	rm *.o bb
